---
import Footer from "@/components/layout/Footer";
import Blog from "@/components/layout/Home/Blog";
import Customers from "@/components/layout/Home/Customers";
import Facts from "@/components/layout/Home/Facts";
import Hero from "@/components/layout/Home/Hero";
import LowHero from "@/components/layout/Home/LowHero";
import Process from "@/components/layout/Home/Process";
import Showcase from "@/components/layout/Home/Showcase";
import MainLayout from "@/layouts/MainLayout.astro";
import "@/styles/globals.css";

const title =
  "Choya Tech - Diseño de páginas web en Baja California Sur - Soluciones Personalizadas para Tu Negocio";
const description =
  "Choya Tech es tu agencia web confiable. Creamos soluciones personalizadas para potenciar tu presencia en línea y atraer más clientes.";
const keywords =
  "En Choya Tech, somos una agencia de desarrollo y diseño web en Baja California Sur, especializada en crear soluciones personalizadas para mejorar la presencia en línea de tu negocio. Ofrecemos desarrollo de páginas web a medida para negocios locales, ayudándote a atraer más clientes y llevar el control de tus operaciones de manera eficiente. Ya sea que necesites crear una página web desde cero, mejorar una existente, o buscar un programa para gestionar tu negocio, en Choya Tech tenemos la experiencia y las herramientas para llevar tu empresa al siguiente nivel. ¡Descubre cómo podemos ayudarte hoy mismo!";
const author = "Choya Tech";
const canonicalUrl = "https://choya.tech";
---

<MainLayout {title} {description} {keywords} {author} {canonicalUrl}>
  <Hero />
  <Showcase />
  <Blog />
  <Facts />
  <Process />
  <Customers />
  <LowHero />
  <Footer />
</MainLayout>
